<UserControl x:Class="DumbScrum.UserControls.UserStoryListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DumbScrum.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding StoryID}" FontWeight="SemiBold" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="1" Text="{Binding Person}" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="2" Text="{Binding Action}" VerticalAlignment="Center" />
        <TextBlock Grid.Row="3" Text="{Binding Reason}" VerticalAlignment="Center" />
    </Grid>
</UserControl>
