<UserControl x:Class="DumbScrum.UserControls.TemplateFilePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DumbScrum.UserControls"
             mc:Ignorable="d" 
             Height="50" Width="465" Loaded="UserControl_Loaded">
    <StackPanel Orientation="Vertical" Height="50" HorizontalAlignment="Center">
        <TextBlock x:Name="tbType" Text="Template File: " VerticalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBox x:Name="tbFile" Width="400" VerticalAlignment="Center" Padding="5" IsEnabled="False"/>
            <Button x:Name="btnChange" Content="Change" Padding="8,4" Margin="5,0,0,0" Click="btnChange_Click" />
        </StackPanel>
    </StackPanel>
</UserControl>
