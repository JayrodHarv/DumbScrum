<UserControl x:Class="DumbScrum.Views.ProjectSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DumbScrum.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Label Content="Project Settings:" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
        <Separator Foreground="Gray" VerticalAlignment="Bottom"/>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Grid.Row="1">
                <Expander Header="Template Settings:" FontWeight="DemiBold" IsExpanded="True">
                    <StackPanel Orientation="Horizontal" Height="30" HorizontalAlignment="Center">
                        <TextBlock Text="Use Case Template File: " VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBox x:Name="tbUseCaseFile" Width="400" VerticalAlignment="Center" Padding="5" IsEnabled="False"/>
                            <Button x:Name="btnUseCaseChange" Content="Change" Padding="8,4" Margin="5,0,0,0" Click="btnUseCaseChange_Click" />
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <Expander Header="File Settings:" FontWeight="DemiBold" IsExpanded="True">
                    <Grid>

                    </Grid>
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
