@model DumbScrumWebMVC.Models.CreateSprintVM

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Sprint", FormMethod.Post)) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal p-2">
        <h2>Plan New Sprint</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.ProjectID)

        @Html.HiddenFor(model => model.Features)

        <div class="form-group">
            <label class="align-self-center" style="padding-right: 5px;">Feature</label>
            <div class="col-md-10">
                <select name="FeatureID" class = "form-control", style = "width: fit-content;">
                    @foreach(DataObjects.FeatureVM feature in Model.Features) {
                        <option value="@feature.FeatureID">@feature.Name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <label>Start Date</label>
        <div id="startDate"
                class="input-group date"
                data-date-format="mm-dd-yyyy"
                style="width: fit-content;">
            <div class="col-md-10">
                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control", name = "startDate", type = "text", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
            </div>
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-calendar"></i>
            </span>
        </div>

        <label>End Date</label>
        <div id="endDate"
                class="input-group date"
                data-date-format="mm-dd-yyyy"
                style="width: fit-content;">
            <div class="col-md-10">
                @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control", name = "endDate", type = "text", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
            </div>
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-calendar"></i>
            </span>
        </div>

        <div class="btn-group mt-2">
            <a href="@Url.Action("Index", "Sprint", new { projectID=Model.ProjectID })" class="btn btn-secondary">Back</a>
            <button type="submit" class="btn btn-primary">Plan Sprint</button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            $('#startDate').datepicker({
                autoclose: true,
                todayHighlight: true,
                todayBtn: "linked"
            });
            $('#endDate').datepicker({
                autoclose: true,
                todayHighlight: true,
                todayBtn: "linked"
            });
        });
    </script>
}
