@model DataObjects.User

@{
    ViewBag.Title = "Sign Up for Dumb Scrum";
}

<div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                <div class="card bg-light-subtle" style="border-radius: 15px;">
                    <div class="card-body p-5">
                        <h2 class="text-uppercase text-center mb-5">Sign Up for Dumb Scrum</h2>

                        @using (Html.BeginForm("SignUp", "SignUp", FormMethod.Post)) {

                            <div class="form-outline mb-4">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control-lg" } })
                                <br />
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-outline mb-4">
                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control-lg" } })
                                <br />
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                <br />
                                @*<small id="passwordHelpBlock" class="form-text text-muted">
                    Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
                </small>*@
                            </div>

                            <div class="form-outline mb-4">
                                @Html.LabelFor(model => model.DisplayName, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.DisplayName, new { htmlAttributes = new { @class = "form-control-lg" } })
                                <br />
                                @Html.ValidationMessageFor(model => model.DisplayName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-check d-flex justify-content-center mb-5">
                                <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3cg" />
                                <label class="form-check-label" for="form2Example3g">
                                    I agree all statements in <a href="#!" class="text-body"><u>Terms of service</u></a>
                                </label>
                            </div>

                            <div class="d-flex justify-content-center">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Sign Up" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" />
                                </div>
                            </div>

                            <p class="text-center text-muted mt-5 mb-0">
                                Have already an account? @Html.ActionLink("Sign in here", "Index", "SignIn", routeValues: null, htmlAttributes: new { title = "Manage", @class = "fw-bold text-body" })
                            </p>

                        }

                    </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
