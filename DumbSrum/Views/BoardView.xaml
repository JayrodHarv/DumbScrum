<UserControl x:Class="DumbSrum.Views.BoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DumbSrum.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
            <TextBlock Text="Sprint Name" FontSize="16"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Scrum Group" Margin="5"/>
                <TextBlock Text="Scrum Leader" Margin="5"/>
                <TextBlock Text="Start Date - End Date" Margin="5"/>
            </StackPanel>
        </StackPanel>


        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical">
            <StackPanel Background="Red" HorizontalAlignment="Center" Orientation="Horizontal" >
                <TextBlock Text="To Do" Foreground="white" Padding="3" FontWeight="SemiBold" />
                <TextBlock Text="#" Foreground="white" Padding="3" FontWeight="SemiBold"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
            <StackPanel Background="Orange" HorizontalAlignment="Center" Orientation="Horizontal" >
                <TextBlock Text="In Progress" Foreground="white" Padding="3" FontWeight="SemiBold" />
                <TextBlock Text="#" Foreground="white" Padding="3" FontWeight="SemiBold"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Vertical">
            <StackPanel Background="Gold" HorizontalAlignment="Center" Orientation="Horizontal" >
                <TextBlock Text="Design Phase" Foreground="white" Padding="3" FontWeight="SemiBold" />
                <TextBlock Text="#" Foreground="white" Padding="3" FontWeight="SemiBold"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="3" Orientation="Vertical">
            <StackPanel Background="Green" HorizontalAlignment="Center" Orientation="Horizontal" >
                <TextBlock Text="Complete" Foreground="white" Padding="3" FontWeight="SemiBold" />
                <TextBlock Text="#" Foreground="white" Padding="3" FontWeight="SemiBold"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
