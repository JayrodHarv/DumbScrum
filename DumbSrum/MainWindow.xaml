<Window x:Class="DumbSrum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DumbSrum"
        xmlns:views="clr-namespace:DumbSrum.Views"
        mc:Ignorable="d"
        Title="Dumb Scrum" 
        Height="650" Width="1200" 
        Background="White"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen" 
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="1" Background="#FF969696">
            <Grid HorizontalAlignment="Stretch">
                <Label x:Name="lblTab" Content="Home" Foreground="White" FontWeight="SemiBold" FontSize="20"/>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <TextBlock x:Name="txtDisplayName" Text="Jared Harvey" VerticalAlignment="Center" Padding="5"/>
                    <Ellipse Height="35" Width="35">
                        <Ellipse.Fill>
                            <ImageBrush x:Name="imgPfp"  ImageSource="Images/Sample_User_Icon.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="0" Grid.RowSpan="2" VerticalScrollBarVisibility="Auto" Background="#FF3A3A3A">
            <StackPanel VerticalAlignment="Top" Orientation="Vertical">
                <Label Height="40" Content="Dumb Scrum" FontSize="18" FontWeight="Bold" HorizontalAlignment="Stretch" VerticalContentAlignment="Center"
                       Foreground="white" BorderBrush="Gray" BorderThickness="0,0,0,0.5" Padding="20,0,0,0"/>
                <RadioButton x:Name="btnHome" Content="Home" Height="30" IsChecked="True" Click="btnHome_Click"
                                     Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton x:Name="btnBrowseProjects" Content="Browse Projects" Height="30" Click="btnBrowseProjects_Click" 
                                     Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton x:Name="btnMyProjects" Content="My Projects" Height="30" Click="btnMyProjects_Click" 
                                     Style="{StaticResource MenuButtonTheme}"/>
                <Expander x:Name="expMyProjects" Header="My Projects" Foreground="white" Margin="20, 0,0,0" Expanded="expMyProjects_Expanded">
                    <ItemsControl ItemsSource="{Binding Projects}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ProjectID}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Expander>
            </StackPanel>
        </ScrollViewer>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1" Grid.Column="1">
            <ContentControl Content="{Binding CurrentView}">

            </ContentControl>
        </ScrollViewer>

        <Grid Grid.Row="2" Grid.Column="0">
            
        </Grid>
        
    </Grid>
</Window>
