<Window x:Class="DumbSrum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DumbSrum"
        mc:Ignorable="d"
        Title="Dumb Scrum" 
        Height="650" Width="1200" 
        Background="White"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen" 
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="1" 
                Background="#FF969696">
            <Grid HorizontalAlignment="Stretch">
                <Label x:Name="lblTab" Content="Home" Foreground="White" 
                       FontWeight="SemiBold" FontSize="20"/>

                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <TextBlock x:Name="txtDisplayName" Text="Jared Harvey" VerticalAlignment="Center" Padding="5"></TextBlock>
                    <Ellipse Height="35" Width="35">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="C:\Users\Jared\Desktop\Coding Projects\.NET II Final Project\DumbSrum\server-icon.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    

                </StackPanel>
            </Grid>
        </Border>

        <Grid Background="white"
              Grid.Row="1">
            <Border BorderBrush="Black" BorderThickness="0">
                <StackPanel VerticalAlignment="Top" Orientation="Vertical">
                    <Button x:Name="btnHome" Content="Home" Height="30" FontSize="12" Background="Black" BorderThickness="0" Cursor="Arrow" Foreground="White" Click="btnHome_Click"/>
                    <Button x:Name="btnProjects" Content="Projects" Height="30" FontSize="12" Background="LightGray" BorderThickness="0" Click="btnProjects_Click"/>
                    <Button x:Name="btnChats" Content="Chats" Height="30" FontSize="12" Background="LightGray" BorderThickness="0" Click="btnChats_Click"/>
                </StackPanel>
            </Border>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
        </Grid>
    </Grid>
</Window>
